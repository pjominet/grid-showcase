@page
@model GridShowcase.Pages.Flex
@{
    ViewData["Title"] = "Flex";
}

<h1 class="text-center mt-3">How to flex</h1>

<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link active" data-bs-toggle="tab" href="#case1">Easy centering</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-bs-toggle="tab" href="#case2">Row/Column behavior</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-bs-toggle="tab" href="#case3">Spacing & alignment</a>
    </li>
</ul>

<div class="tab-content content-stretch">
    <section id="case1" class="tab-pane active content-stretch p-3">
        <div class="d-flex justify-content-center align-items-center bg-light" style="height: 50%">
            <div class="bg-success text-dark p-3">
                I'm always centered relative to my parent
            </div>
        </div>
    </section>
    <section id="case2" class="tab-pane fade content-stretch p-3">
        <strong class="d-block mb-3">flex-row</strong>
        <div class="d-flex bg-light mb-3" style="height: 300px">
            <div class="bg-success p-3 text-dark d-block">Block 1</div>
            <div class="bg-info p-3 text-dark d-inline-block">Block 2</div>
            <span class="bg-warning p-3 text-dark d-inline">Block 3</span>
        </div>

        <strong class="d-block mb-3">flex-column</strong>
        <div class="d-flex flex-column bg-light mb-3" style="height: 300px">
            <div class="bg-success p-3 text-dark d-block">Block 1</div>
            <div class="bg-info p-3 text-dark d-inline-block">Block 2</div>
            <span class="bg-warning p-3 text-dark d-inline">Block 3</span>
        </div>

        <strong class="d-block mb-3">Applying some margin magic</strong>
        <div class="d-flex bg-light mb-3" style="height: 150px">
            <div class="bg-success p-3 text-dark d-block me-auto">Block 1</div>
            <div class="bg-info p-3 text-dark d-block ms-auto">Block 2</div>
        </div>
        <div class="d-flex flex-column bg-light mb-3" style="height: 150px">
            <div class="bg-success p-3 text-dark d-block me-auto">Block 1</div>
            <div class="bg-info p-3 text-dark d-block ms-auto">Block 2</div>
        </div>
    </section>
    <section id="case3" class="tab-pane fade content-stretch p-3">
        <strong class="d-block mb-3">content between</strong>
        <div class="d-flex justify-content-between bg-light mb-3">
            <div class="bg-success p-3 text-dark">Block 1</div>
            <div class="bg-info p-3 text-dark">Block 2</div>
            <div class="bg-warning p-3 text-dark">Block 3</div>
        </div>

        <strong class="d-block mb-3">content around</strong>
        <div class="d-flex justify-content-around bg-light mb-3">
            <div class="bg-success p-3 text-dark">Block 1</div>
            <div class="bg-info p-3 text-dark">Block 2</div>
            <div class="bg-warning p-3 text-dark">Block 3</div>
        </div>

        <strong class="d-block mb-3">content evenly</strong>
        <div class="d-flex justify-content-evenly bg-light mb-3">
            <div class="bg-success p-3 text-dark">Block 1</div>
            <div class="bg-info p-3 text-dark">Block 2</div>
            <div class="bg-warning p-3 text-dark">Block 3</div>
        </div>

        <strong class="d-block mb-3">content center</strong>
        <div class="d-flex justify-content-center bg-light mb-3">
            <div class="bg-success p-3 text-dark">Block 1</div>
            <div class="bg-info p-3 text-dark">Block 2</div>
            <div class="bg-warning p-3 text-dark">Block 3</div>
        </div>
    </section>
</div>
