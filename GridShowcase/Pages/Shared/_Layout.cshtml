<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Showcase- @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/css/bootstrap.icons.css">
    <link rel="stylesheet" href="~/styles/common.css" asp-append-version="true">
</head>
<body>
<div class="grid-layout">
    <header class="navbar navbar-expand-lg bg-body-secondary">
        <div class="container-fluid mx-5">
            <a asp-page="/Index" class="navbar-brand h1 mb-0">
                <i class="bi-grid-3x3 me-2"></i>Showcase
            </a>
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <button class="btn btn-link nav-link dropdown-toggle"
                            id="bd-theme" type="button" data-bs-toggle="dropdown">
                        <i class="bi-moon-stars-fill my-1 theme-icon-active"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" style="--bs-dropdown-min-width: 8rem;" data-bs-display="static">
                        <li>
                            <button type="button" class="dropdown-item" data-bs-theme-value="light">
                                <i class="bi-sun-fill me-2 opacity-50 theme-icon"></i>Light
                            </button>
                        </li>
                        <li>
                            <button type="button" class="dropdown-item active" data-bs-theme-value="dark">
                                <i class="bi-moon-stars-fill me-2 opacity-50 theme-icon"></i>Dark
                            </button>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </header>
    <nav class="bg-body-secondary">
        <ul class="nav nav-pills flex-column mb-auto align-items-start">
            <li class="nav-item">
                <a class="nav-link fw-bold" asp-page="/Index"><i class="bi-chevron-right me-2"></i>Intro</a>
            </li>
            <li class="nav-item">
                <a class="nav-link fw-bold" asp-page="/Flex"><i class="bi-chevron-right me-2"></i>Flex</a>
            </li>
            <li class="nav-item">
                <a class="nav-link fw-bold" asp-page="/BootstrapGrid"><i class="bi-chevron-right me-2"></i>Bootstrap Grid</a>
            </li>
            <li class="nav-item">
                <a class="nav-link fw-bold" asp-page="CssGrid"><i class="bi-chevron-right me-2"></i>CSS Grid</a>
            </li>
            <li class="nav-item">
                <a class="nav-link fw-bold" asp-page="Guide"><i class="bi-chevron-right me-2"></i>Full Guide</a>
            </li>
        </ul>
    </nav>
    <main class="content-stretch">
        @RenderBody()
    </main>
    <footer class="bg-body-tertiary d-flex justify-content-center align-items-center">
        <strong>&copy; 2023 - GridShowcase</strong>
    </footer>
</div>

<script src="~/lib/js/bootstrap.bundle.min.js" type="text/javascript"></script>
<script src="~/js/common.js" type="text/javascript"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
